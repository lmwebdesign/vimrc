@import 'nib'
@import 'jeet'
@import 'rupture'

input,
textarea
    width:100%;
    margin: 0 auto 1rem auto;
    border:1px solid #333;
    padding:1rem;
    box-sizing:border-box;
    outline:none;

.login
    border:1px solid red;
    padding:1rem;
    center(300)

.dashboard
    border:1px solid red;
    width:90%;
    margin:0 auto;
    padding:1rem;

    .logout
        text-align:right;
        margin-bottom:1rem;

    .addnew
        button
            width:100%;
            padding:.5rem 0;

    .current
        .item
            padding-bottom: 1rem
            border-bottom: 1px solid rgba(0,0,0,0.5)            
        .name
            text-transform:uppercase
            column(5/6, cycle:2)
        .price
            column(1/6, cycle:2)


    
